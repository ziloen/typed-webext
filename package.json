{
  "name": "typed-webext",
  "version": "0.7.10",
  "description": "Type safe web extension api (partial)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/ziloen/typed-webext",
  "scripts": {
    "build": "tsdown",
    "prepack": "npm run build",
    "release": "bumpp --commit --no-push && npm publish",
    "test": "vitest",
    "format": "prettier --write . --experimental-cli"
  },
  "keywords": [
    "browser",
    "extension",
    "typescript"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react.js",
      "types": "./dist/react.d.ts"
    }
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/webextension-polyfill": "^0.12.4",
    "rxjs": "^7.8.2",
    "serialize-error": "<=13",
    "type-fest": "^5.4.3",
    "webextension-polyfill": ">=0.12.0 <=1.0.0"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@prettier/plugin-oxc": "^0.1.3",
    "@types/react": "^19.2.11",
    "@ziloen/eslint-config": "^0.1.77",
    "bumpp": "^10.4.1",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "ts-lib-enhance": "^1.0.22",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "serialize-error": "<=13",
    "webextension-polyfill": ">=0.12.0 <=1.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
